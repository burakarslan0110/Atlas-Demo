@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-key fa-3x text-primary"></i>
                        <h3 class="mt-3">Şifremi Unuttum</h3>
                        <p class="text-muted">E-posta adresinize şifre sıfırlama bağlantısı göndereceğiz</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <partial name="_AlertPartial" view-data='@new ViewDataDictionary(ViewData) { { "Type", "success" }, { "Message", TempData["Success"] } }' />
                    }

                    @if (TempData["Error"] != null)
                    {
                        <partial name="_AlertPartial" view-data='@new ViewDataDictionary(ViewData) { { "Type", "error" }, { "Message", TempData["Error"] } }' />
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> E-posta
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-paper-plane"></i> Şifre Sıfırlama Linki Gönder
                        </button>

                        <div class="text-center">
                            <p class="mb-0">
                                <a asp-action="Login" class="text-decoration-none">
                                    <i class="fas fa-arrow-left"></i> Giriş sayfasına dön
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">
                    <i class="fas fa-info-circle"></i>
                    Şifre sıfırlama bağlantısı 1 saat geçerli olacaktır.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
