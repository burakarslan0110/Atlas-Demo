@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-lock-open fa-3x text-primary"></i>
                        <h3 class="mt-3">Yeni Şifre Belirle</h3>
                        <p class="text-muted">Hesabınız için yeni bir şifre oluşturun</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <partial name="_AlertPartial" view-data='@new ViewDataDictionary(ViewData) { { "Type", "success" }, { "Message", TempData["Success"] } }' />
                    }

                    @if (TempData["Error"] != null)
                    {
                        <partial name="_AlertPartial" view-data='@new ViewDataDictionary(ViewData) { { "Type", "error" }, { "Message", TempData["Error"] } }' />
                    }

                    @if (ViewBag.TokenValid == true)
                    {
                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" asp-for="Token" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="mb-3">
                                <label asp-for="NewPassword" class="form-label">
                                    <i class="fas fa-lock"></i> Yeni Şifre
                                </label>
                                <input asp-for="NewPassword" class="form-control form-control-lg" placeholder="••••••••" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    En az 8 karakter, bir büyük harf, bir küçük harf ve bir rakam içermelidir.
                                </small>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-lock"></i> Şifre Tekrar
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="••••••••" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="fas fa-check"></i> Şifremi Sıfırla
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Geçersiz veya süresi dolmuş bağlantı!</strong>
                            <p class="mb-0 mt-2">Bu şifre sıfırlama bağlantısı geçersiz veya süresi dolmuş. Lütfen yeni bir şifre sıfırlama isteği oluşturun.</p>
                        </div>
                        <div class="text-center">
                            <a asp-action="ForgotPassword" class="btn btn-primary">
                                <i class="fas fa-redo"></i> Yeni Şifre Sıfırlama İsteği
                            </a>
                        </div>
                    }

                    <div class="text-center mt-3">
                        <p class="mb-0">
                            <a asp-action="Login" class="text-decoration-none">
                                <i class="fas fa-arrow-left"></i> Giriş sayfasına dön
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
