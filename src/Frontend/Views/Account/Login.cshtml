@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-3x text-primary"></i>
                        <h3 class="mt-3">Giriş Yap</h3>
                        <p class="text-muted">Hesabınıza giriş yapın</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <partial name="_AlertPartial" view-data='@new ViewDataDictionary(ViewData) { { "Type", "success" }, { "Message", TempData["Success"] } }' />
                    }

                    @if (TempData["Error"] != null)
                    {
                        <partial name="_AlertPartial" view-data='@new ViewDataDictionary(ViewData) { { "Type", "error" }, { "Message", TempData["Error"] } }' />
                    }

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> E-posta
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label asp-for="Password" class="form-label mb-0">
                                    <i class="fas fa-lock"></i> Şifre
                                </label>
                                <a asp-action="ForgotPassword" class="text-decoration-none small">
                                    <i class="fas fa-key"></i> Şifremi Unuttum?
                                </a>
                            </div>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Beni Hatırla
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-sign-in-alt"></i> Giriş Yap
                        </button>

                        <div class="text-center">
                            <p class="mb-0">Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
